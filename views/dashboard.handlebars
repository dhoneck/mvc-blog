<h2 class="is-size-4 has-text-centered">Dashboard</h2>
{{#if posts}}
  {{#each posts}}
    <a class="post-link" href="/view-post/{{id}}">
      <div class="post-container">
        <div class="post-header">{{title}} <span>Created on {{formatDate createdAt}}</span></div>
        <div class="post-body">{{shortenText content}}</div>
      </div>
    </a>
  {{/each}}
{{else}}
  <p class="my-3 has-text-centered">No blog posts found.</p>
{{/if}}
<div class="mt-4 field is-grouped is-justify-content-center">
  <div class="control">
    <button id="add-post-btn" class="button js-modal-trigger" data-target="modal-js-example">Create Post</button>
  </div>
</div>

<!-- Create Post Modal-->
<div id="create-post-modal" class="modal">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">Create Post</p>
      <button id="close-modal-btn" class="delete" aria-label="close"></button>
    </header>
    <section class="modal-card-body">
      <!-- Content ... -->
      <div class="field">
        <label class="label">Title</label>
        <div class="control">
          <input id="blog-title" class="input" type="text" placeholder="Add blog title here">
        </div>
      </div>

      <div class="field">
        <label class="label">Content</label>
        <div class="control">
          <textarea id="blog-content" class="textarea" placeholder="Add blog content here"></textarea>
        </div>
      </div>
    </section>
    <footer class="modal-card-foot">
      <button id="submit-post-btn" class="button is-success has-background-info">Submit Post</button>
      <button id="cancel-post-btn" class="button">Cancel</button>
    </footer>
  </div>
</div>

<script src="/js/submit-post.js"></script>