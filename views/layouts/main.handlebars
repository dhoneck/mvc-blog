    <h2 class="is-size-4">A tech blog that utilizes the MVC framework</h2>
    {{#if loggedIn}}
    <nav>
      <button class="btn" id="logout">Logout</button>
    </nav>
    {{/if}}
  </header>

  <main class="container container-fluid mt-5">
    {{{ body }}}
  </main>

  <footer>   
  </footer>

  {{#if loggedIn}}
  <script src="/js/logout.js"></script>
  {{/if}}
</body>

</html>
